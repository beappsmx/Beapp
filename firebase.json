{
  "rules": {
    "storage": {
      "$file": {
        "read": true,
        "write": false
      }
    }
  },
  "hosting": {
    "public": "dist/beapp",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": {
      "storage": {
        "$file": {
          "read": true,
          "write": false
        }
      }
    }
  }
}
